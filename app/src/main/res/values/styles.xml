<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material Design 3 Shape Overlays -->
    <style name="ShapeAppearanceOverlay.Material3.Corner.Medium" parent="">
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearanceOverlay.Material3.Corner.Small" parent="">
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearanceOverlay.Material3.Corner.Large" parent="">
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearanceOverlay.Material3.Corner.ExtraLarge" parent="">
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Text Input Layout Styles -->
    <style name="Widget.App.TextInputLayout.FlatRounded" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="Widget.App.TextInputLayout.FlatRounded.ExposedDropdownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <!-- Chart Toggle Styles -->
    <style name="ChartToggleGroupStyle" parent="Widget.Material3.MaterialButtonToggleGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/chart_toggle_group_bg</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ChartToggleButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/chart_toggle_unselected_text</item>
        <item name="android:background">@color/chart_toggle_unselected_bg</item>
    </style>

    <style name="ChartInnerToggleGroupStyle" parent="Widget.Material3.MaterialButtonToggleGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/chart_inner_bg</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ChartInnerToggleButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/chart_inner_text</item>
        <item name="android:background">@color/chart_inner_bg</item>
    </style>

    <!-- Detail Styles -->
    <style name="DetailPhotoIndicatorContainer" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DetailStatusTag" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DetailItemTitle" parent="@style/TextAppearance.Material3.HeadlineMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="DetailCard" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="DetailCardContent" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="DetailCardTitle" parent="@style/TextAppearance.Material3.TitleMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="DetailInfoRowHorizontal" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>

    <style name="DetailLabel" parent="@style/TextAppearance.Material3.BodyMedium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="DetailValue" parent="@style/TextAppearance.Material3.BodyMedium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="DetailPriceText" parent="@style/TextAppearance.Material3.BodyLarge">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>
</resources>