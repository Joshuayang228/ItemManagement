<?xml version="1.0" encoding="utf-8"?>
<!-- 
智能滚动首页布局 - 搜索框滚动隐藏/显示
1. CoordinatorLayout：支持协调滚动行为
2. AppBarLayout：包装搜索框，支持滚动消失/显现
3. RecyclerView：优化滑动速度的信息流
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 可滚动的搜索栏区域 -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <!-- 搜索栏容器 - 支持滚动隐藏/显现 -->
        <LinearLayout
            android:id="@+id/searchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_scrollFlags="scroll|enterAlways|snap">

        <!-- 深色主题搜索卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="22dp"
            app:cardElevation="1dp"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- 搜索图标 - 固定颜色 -->
                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="搜索"
                    app:tint="#757575" />

                <!-- 搜索输入框 - 固定颜色 -->
                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="搜索物品"
                    android:textColorHint="#9E9E9E"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="4dp"
                    android:paddingEnd="8dp"
                    android:gravity="center_vertical" />

                <!-- 清除搜索图标 - 固定颜色 -->
                <ImageView
                    android:id="@+id/clearSearchIcon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_clear"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:visibility="gone"
                    android:contentDescription="清除搜索"
                    app:tint="#757575" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 添加按钮 - 纯图标设计 -->
        <ImageButton
            android:id="@+id/topAddButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_add"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="添加物品"
            android:padding="12dp"
            app:tint="?attr/colorPrimary" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 内容区域 - 包含功能区和物品信息流，支持协调滚动 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 物品列表（包含功能区Header）- 优化滑动速度 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="16dp"
            android:scrollbars="vertical"
            android:overScrollMode="ifContentScrolls" />

        <!-- 空状态视图 -->
        <LinearLayout
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_inventory"
                android:alpha="0.3"
                app:tint="#9E9E9E"
                android:contentDescription="空状态图标" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="暂无物品记录"
                android:textSize="18sp"
                android:textColor="#757575" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="点击右上角的 + 按钮开始添加物品"
                android:textSize="14sp"
                android:textColor="#9E9E9E"
                android:gravity="center" />

        </LinearLayout>

        <!-- 搜索无结果视图 -->
        <LinearLayout
            android:id="@+id/searchEmptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_search"
                android:alpha="0.3"
                app:tint="#9E9E9E"
                android:contentDescription="搜索图标" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="未找到相关物品"
                android:textSize="18sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/searchEmptyHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="尝试使用不同的关键词搜索"
                android:textSize="14sp"
                android:textColor="#9E9E9E"
                android:gravity="center" />

        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>