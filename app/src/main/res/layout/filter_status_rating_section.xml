<?xml version="1.0" encoding="utf-8"?>
<!-- 状态与评级字段区域 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="状态与评级"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <!-- 开封状态 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:text="开封状态"
        android:textColor="?attr/colorOnSurface"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/openStatusContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/openStatusChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="4dp"
            app:selectionRequired="false"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipUnopened"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未开封"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipOpened"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已开封"
                android:checkable="true" />
        </com.google.android.material.chip.ChipGroup>

        <com.google.android.material.chip.Chip
            android:id="@+id/openStatusExpandButton"
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="展示全部"
            android:visibility="gone"
            app:chipIcon="@drawable/ic_expand_more"
            app:iconStartPadding="4dp" />
    </LinearLayout>

    <!-- 评分 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="评分"
        android:textColor="?attr/colorOnSurface"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ratingContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/ratingChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="4dp"
            app:selectionRequired="false"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipRating1"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1颗星"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipRating2"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2颗星"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipRating3"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3颗星"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipRating4"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4颗星"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipRating5"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5颗星"
                android:checkable="true" />
        </com.google.android.material.chip.ChipGroup>

        <com.google.android.material.chip.Chip
            android:id="@+id/ratingExpandButton"
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="展示全部"
            android:visibility="gone"
            app:chipIcon="@drawable/ic_expand_more"
            app:iconStartPadding="4dp" />
    </LinearLayout>

    <!-- 季节 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="季节"
        android:textColor="?attr/colorOnSurface"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/seasonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/seasonChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="4dp"
            app:selectionRequired="false"
            app:singleSelection="false"
            app:checkedChip="@null">
            
            <!-- 动态添加季节chips，使用Suggestion样式 -->
        </com.google.android.material.chip.ChipGroup>

        <com.google.android.material.chip.Chip
            android:id="@+id/seasonExpandButton"
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="展示全部"
            android:visibility="gone"
            app:chipIcon="@drawable/ic_expand_more"
            app:iconStartPadding="4dp" />
    </LinearLayout>

    <!-- 标签 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="标签"
        android:textColor="?attr/colorOnSurface"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/tagsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/tagsChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="4dp"
            app:selectionRequired="false"
            app:singleSelection="false"
            app:checkedChip="@null">
            
            <!-- 动态添加标签chips，使用Suggestion样式 -->
        </com.google.android.material.chip.ChipGroup>

        <com.google.android.material.chip.Chip
            android:id="@+id/tagsExpandButton"
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="展示全部"
            android:visibility="gone"
            app:chipIcon="@drawable/ic_expand_more"
            app:iconStartPadding="4dp" />
    </LinearLayout>
</LinearLayout>
