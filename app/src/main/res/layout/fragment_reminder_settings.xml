<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- 基础设置 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基础设置"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginBottom="16dp" />

                <!-- 到期提前天数 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到期提前天数"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <SeekBar
                        android:id="@+id/seekBarExpirationDays"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="30"
                        android:progress="7" />

                    <TextView
                        android:id="@+id/textExpirationDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7天"
                        android:minWidth="48dp"
                        android:gravity="center"
                        android:layout_marginStart="16dp" />

                </LinearLayout>

                <!-- 包含保修期 -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchIncludeWarranty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="包含保修期到期提醒"
                    android:layout_marginBottom="16dp" />

                <!-- 通知时间 -->
                <Button
                    android:id="@+id/buttonNotificationTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="通知时间：09:00"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_marginBottom="16dp" />

                <!-- 库存提醒 -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchStockReminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="启用库存不足提醒"
                    android:layout_marginBottom="16dp" />

                <!-- 推送通知 -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchPushNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="推送通知"
                    android:layout_marginBottom="16dp" />

                <!-- 应用内提醒 -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchInAppReminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="应用内提醒"
                    android:layout_marginBottom="16dp" />

                <!-- 勿扰时间 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="勿扰时间"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <Button
                        android:id="@+id/buttonQuietStart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="开始：22:00"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/buttonQuietEnd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="结束：08:00"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- 周末暂停 -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchWeekendPause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="周末暂停提醒" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 分类阈值设置 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="分类库存阈值"
                        android:textAppearance="?attr/textAppearanceHeadline6" />

                    <Button
                        android:id="@+id/buttonAddCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加分类"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewCategoryThresholds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 操作按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/buttonReset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="重置"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="保存设置"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
