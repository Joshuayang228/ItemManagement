<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.warranty.AddEditWarrantyFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="24dp">

            <!-- 顶部凭证图片区域 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/receiptImageCard"
                style="@style/Widget.App.Card.Warranty.Receipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保修凭证"
                        android:textAppearance="@style/TextAppearance.App.Warranty.SectionTitle"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/receiptImageRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 基本信息分组 -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.App.Card.Warranty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="基本信息"
                        android:textAppearance="@style/TextAppearance.App.Warranty.SectionTitle" />

                    <!-- 选择物品行 -->
                    <LinearLayout
                        android:id="@+id/itemSelectionLayout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="选择物品"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/itemSelectionAutoComplete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:maxWidth="200dp"
                            android:hint="请选择"
                            android:textColorHint="?attr/colorOutlineVariant"
                            tools:text="iPhone 14 Pro" />

                    </LinearLayout>

                    <!-- 分割线 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:background="?attr/colorOutlineVariant" />

                    <!-- 购买日期行 -->
                    <LinearLayout
                        android:id="@+id/purchaseDateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="购买日期"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/purchaseDateEditText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            tools:text="2025-10-06" />

                    </LinearLayout>

                    <!-- 分割线 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:background="?attr/colorOutlineVariant" />

                    <!-- 保修期长度行 -->
                    <LinearLayout
                        android:id="@+id/warrantyPeriodLayout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="保修期长度"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="?attr/colorOnSurface" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <EditText
                                android:id="@+id/warrantyPeriodEditText"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:gravity="end"
                                android:background="@android:color/transparent"
                                android:inputType="number"
                                android:hint="0"
                                android:textColorHint="?attr/colorOutlineVariant"
                                tools:text="12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 个月"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginStart="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 分割线 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:background="?attr/colorOutlineVariant" />

                    <!-- 保修到期日期行 -->
                    <LinearLayout
                        android:id="@+id/warrantyEndDateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="保修到期日期"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/warrantyEndDateEditText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:hint="自动计算"
                            android:textColorHint="?attr/colorOutlineVariant"
                            tools:text="2026-10-06" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 服务商信息分组 -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.App.Card.Warranty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="服务商信息（可选）"
                        android:textAppearance="@style/TextAppearance.App.Warranty.SectionTitle" />

                    <!-- 保修服务商行 -->
                    <LinearLayout
                        android:id="@+id/warrantyProviderLayout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="保修服务商"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="?attr/colorOnSurface" />

                        <EditText
                            android:id="@+id/warrantyProviderEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:gravity="end"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:hint="输入服务商"
                            android:textColorHint="?attr/colorOutlineVariant"
                            tools:text="官方售后服务" />

                    </LinearLayout>

                    <!-- 分割线 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:background="?attr/colorOutlineVariant" />

                    <!-- 联系方式行 -->
                    <LinearLayout
                        android:id="@+id/contactInfoLayout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="联系方式"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="?attr/colorOnSurface" />

                        <EditText
                            android:id="@+id/contactInfoEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:gravity="end"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:hint="输入联系方式"
                            android:textColorHint="?attr/colorOutlineVariant"
                            tools:text="400-123-4567" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 备注分组 -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.App.Card.Warranty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="备注（可选）"
                        android:textAppearance="@style/TextAppearance.App.Warranty.SectionTitle" />

                    <!-- 备注行 -->
                    <LinearLayout
                        android:id="@+id/notesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:orientation="horizontal"
                        android:gravity="top"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="备注"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="?attr/colorOnSurface"
                            android:paddingTop="4dp" />

                        <EditText
                            android:id="@+id/notesEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:gravity="end|top"
                            android:background="@android:color/transparent"
                            android:inputType="textMultiLine"
                            android:maxLines="3"
                            android:hint="输入备注"
                            android:textColorHint="?attr/colorOutlineVariant"
                            tools:text="保修期内免费维修，保修卡需妥善保存" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 底部保存按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveButton"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="保存保修信息"
                android:textSize="16sp"
                app:cornerRadius="16dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- 加载中指示器 -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="?attr/colorPrimary" />

    </FrameLayout>

    <!-- 隐藏的视图用于代码兼容 -->
    <LinearLayout
        android:id="@+id/selectedItemPreviewCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone">
        <ImageView android:id="@+id/selectedItemImage" android:layout_width="0dp" android:layout_height="0dp" />
        <TextView android:id="@+id/selectedItemName" android:layout_width="0dp" android:layout_height="0dp" />
        <TextView android:id="@+id/selectedItemInfo" android:layout_width="0dp" android:layout_height="0dp" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
