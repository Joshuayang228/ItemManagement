<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <!-- 主要内容 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 数据统计卡片 -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- 卡片标题：图标+文字 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_analytics_24dp"
                            android:contentDescription="数据统计"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="数据统计"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- 数据统计行 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <!-- 物品数量 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvItemCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary"
                                tools:text="14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="物品"
                                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <!-- 购物清单 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvShoppingCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary"
                                tools:text="5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="购物清单"
                                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <!-- 保修记录 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvWarrantyCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary"
                                tools:text="3" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="保修记录"
                                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <!-- 借还记录 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvBorrowCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary"
                                tools:text="4" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="借还记录"
                                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 导出选项卡片 -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- 卡片标题：图标+文字 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_file_download_24dp"
                            android:contentDescription="导出选项"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="导出选项"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- 导出全部数据按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnExportAll"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:text="导出全部数据"
                        android:textSize="16sp"
                        app:icon="@drawable/ic_file_download_24dp"
                        app:iconGravity="textStart" />

                    <!-- 分割线 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        android:background="?attr/colorOnSurface"
                        android:alpha="0.12" />

                    <!-- 副标题 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="或单独导出："
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="12dp" />

                    <!-- 导出物品清单 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnExportItems"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:text="物品清单"
                        app:icon="@drawable/ic_inventory_24dp"
                        app:iconGravity="textStart" />

                    <!-- 导出购物清单 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnExportShopping"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:text="购物清单"
                        app:icon="@drawable/ic_shopping_cart"
                        app:iconGravity="textStart" />

                    <!-- 导出保修记录 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnExportWarranties"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:text="保修记录"
                        app:icon="@drawable/ic_warranty_24dp"
                        app:iconGravity="textStart" />

                    <!-- 导出借还记录 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnExportBorrows"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="借还记录"
                        app:icon="@drawable/ic_person_24dp"
                        app:iconGravity="textStart" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 导出说明卡片 -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- 卡片标题：图标+文字 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_info"
                            android:contentDescription="导出说明"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="导出说明"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- 说明内容 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• 导出的文件为CSV格式，可用Excel打开\n• 文件保存在Downloads/ItemManagement_Export/目录\n• 支持一键分享到微信、邮件等应用\n• 数据包含完整的物品信息、保修和借还记录"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:lineSpacingExtra="6dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- 加载进度遮罩层 -->
    <FrameLayout
        android:id="@+id/progressOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:minWidth="200dp">

                <ProgressBar
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正在导出数据..."
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="?attr/colorOnSurface" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

</LinearLayout>