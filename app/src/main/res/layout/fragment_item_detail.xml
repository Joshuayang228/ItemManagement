<?xml version="1.0" encoding="utf-8"?>
<!-- Material Design 3 精美物品详情布局 - 基于备份设计 -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceContainer">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="24dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 照片轮播区域 -->
            <FrameLayout
                android:id="@+id/photoContainer"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="?attr/colorSurfaceVariant"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/photoViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- 照片指示器 -->
                <LinearLayout
                    android:id="@+id/photoIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_background_semi_transparent"
                    android:padding="8dp" />

                <!-- 状态标签（临期、过期等） -->
            </FrameLayout>

            <!-- 状态标签（如临期、过期等） - 移到独立位置 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/statusTagView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                style="@style/Widget.Material3.Chip.Assist.Elevated"
                app:chipBackgroundColor="?attr/colorErrorContainer"
                app:chipStrokeWidth="0dp"
                android:textColor="?attr/colorOnErrorContainer"
                app:layout_constraintTop_toBottomOf="@id/photoContainer"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="临期"
                tools:visibility="visible" />

            <!-- 物品名称 -->
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textColor="?attr/colorOnSurface"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/photoContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="MacBook Pro 14寸 M3 Pro芯片" />

            <!-- 基本信息卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/basicInfoCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:layout_constraintTop_toBottomOf="@id/nameTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- 卡片标题 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="基本信息"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="24dp" />

                    <!-- 数量 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="数量"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/quantityTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="1 台" />
                    </LinearLayout>

                    <!-- 容量 -->
                    <LinearLayout
                        android:id="@+id/capacityContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="容量"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/capacityTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="512GB" />
                    </LinearLayout>

                    <!-- 单价 -->
                    <LinearLayout
                        android:id="@+id/priceContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="单价"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/priceTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:gravity="end"
                            tools:text="¥14,999" />
                    </LinearLayout>

                    <!-- 总价 -->
                    <LinearLayout
                        android:id="@+id/totalPriceContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="总价"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/totalPriceTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:gravity="end"
                            tools:text="¥14,999" />
                    </LinearLayout>

                    <!-- 分类 - 使用Material 3 Chip -->
                    <LinearLayout
                        android:id="@+id/categoryContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="分类"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end">
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/categoryChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginTop="-4dp"
                                android:layout_marginBottom="-4dp"
                                style="@style/Widget.Material3.Chip.Suggestion"
                                app:chipBackgroundColor="?attr/colorSecondaryContainer"
                                app:chipStrokeWidth="0dp"
                                android:textColor="?attr/colorOnSecondaryContainer"
                                android:textSize="12sp"
                                app:closeIconVisible="false"
                                tools:text="电子产品" />
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/subCategoryChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-4dp"
                                android:layout_marginBottom="-4dp"
                                style="@style/Widget.Material3.Chip.Suggestion"
                                app:chipBackgroundColor="?attr/colorTertiaryContainer"
                                app:chipStrokeWidth="0dp"
                                android:textColor="?attr/colorOnTertiaryContainer"
                                android:textSize="12sp"
                                app:closeIconVisible="false"
                                tools:text="笔记本电脑" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 位置 -->
                    <LinearLayout
                        android:id="@+id/locationContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="位置"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/locationTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="书房 > 桌面" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 物品状态卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/statusCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:layout_constraintTop_toBottomOf="@id/basicInfoCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- 卡片标题 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="物品状态"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="24dp" />

                    <!-- 保质期 -->
                    <LinearLayout
                        android:id="@+id/shelfLifeContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="保质期"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/shelfLifeTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="30天" />
                    </LinearLayout>

                    <!-- 保修期 -->
                    <LinearLayout
                        android:id="@+id/warrantyContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="保修期"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/warrantyTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="365天" />
                    </LinearLayout>

                    <!-- 季节 -->
                    <LinearLayout
                        android:id="@+id/seasonContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="季节"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/seasonTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="春夏秋冬" />
                    </LinearLayout>

                    <!-- 开封状态 -->
                    <LinearLayout
                        android:id="@+id/openStatusContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="开封状态"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/openStatusTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="未开封" />
                    </LinearLayout>

                    <!-- 评分 - Material 3 RatingBar -->
                    <LinearLayout
                        android:id="@+id/ratingContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="评分"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end">
                            <RatingBar
                                android:id="@+id/ratingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-2dp"
                                android:layout_marginBottom="-2dp"
                                style="?android:attr/ratingBarStyleIndicator"
                                android:numStars="5"
                                android:stepSize="0.5"
                                android:isIndicator="true"
                                android:progressTint="?attr/colorPrimary"
                                android:secondaryProgressTint="?attr/colorOutlineVariant"
                                tools:rating="4.5" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 标签 -->
                    <LinearLayout
                        android:id="@+id/tagsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="标签"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end">
                            <HorizontalScrollView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-4dp"
                                android:layout_marginBottom="-4dp"
                                android:scrollbars="none">
                                <LinearLayout
                                    android:id="@+id/tagsLinearLayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="end">
                                    <!-- 标签Chips会在代码中动态添加 -->
                                </LinearLayout>
                            </HorizontalScrollView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 日期信息卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dateCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:layout_constraintTop_toBottomOf="@id/statusCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- 卡片标题 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="日期信息"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="24dp" />

                    <!-- 添加日期 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="添加日期"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/addDateTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="2023-05-20" />
                    </LinearLayout>

                    <!-- 购买日期 -->
                    <LinearLayout
                        android:id="@+id/purchaseDateContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="购买日期"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/purchaseDateTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="2023-05-20" />
                    </LinearLayout>

                    <!-- 生产日期 -->
                    <LinearLayout
                        android:id="@+id/productionDateContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="生产日期"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/productionDateTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="2023-01-15" />
                    </LinearLayout>

                    <!-- 开封日期 -->
                    <LinearLayout
                        android:id="@+id/openDateContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="开封日期"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/openDateTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="2023-06-01" />
                    </LinearLayout>

                    <!-- 过期日期 -->
                    <LinearLayout
                        android:id="@+id/expirationDateContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="保质到期"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/expirationDateTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="2024-01-15" />
                    </LinearLayout>

                    <!-- 保修到期日期 -->
                    <LinearLayout
                        android:id="@+id/warrantyEndContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="保修到期"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/warrantyEndDateTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="2024-05-20" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 商业信息卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/commercialCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:layout_constraintTop_toBottomOf="@id/dateCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- 卡片标题 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="商业信息"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="24dp" />

                    <!-- 品牌 -->
                    <LinearLayout
                        android:id="@+id/brandContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="品牌"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/brandTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="Apple" />
                    </LinearLayout>

                    <!-- 购买渠道 -->
                    <LinearLayout
                        android:id="@+id/purchaseChannelContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="购买渠道"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/purchaseChannelTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="官方商店" />
                    </LinearLayout>

                    <!-- 商家名称 -->
                    <LinearLayout
                        android:id="@+id/storeNameContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="商家"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/storeNameTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="Apple Store 王府井" />
                    </LinearLayout>

                    <!-- 序列号 -->
                    <LinearLayout
                        android:id="@+id/serialNumberContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="序列号"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/serialNumberTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            android:fontFamily="monospace"
                            tools:text="F1XY2Z3456789" />
                    </LinearLayout>

                    <!-- 规格 -->
                    <LinearLayout
                        android:id="@+id/specificationContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="规格"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/specificationTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="M3 Pro / 18GB / 512GB" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 备注卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/noteCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:layout_constraintTop_toBottomOf="@id/commercialCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- 卡片标题 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="备注"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="24dp" />

                    <!-- 备注内容 -->
                    <TextView
                        android:id="@+id/customNoteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:lineSpacingMultiplier="1.4"
                        android:maxLines="5"
                        android:layout_marginBottom="24dp"
                        tools:text="这是一台非常出色的笔记本电脑，性能强劲，做工精良，适合专业开发工作。购买时享受了教育优惠。" />

                    <!-- 展开/收起按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/expandButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="展开"
                        android:textColor="?attr/colorPrimary"
                        android:visibility="gone"
                        style="@style/Widget.Material3.Button.TextButton"
                        tools:visibility="visible" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 来源信息卡片（包含购物详情展开） -->
            <include
                android:id="@+id/sourceInfoInclude"
                layout="@layout/card_source_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/noteCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>