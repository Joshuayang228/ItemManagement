<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Priority Indicator -->
        <View
            android:id="@+id/priorityIndicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            tools:background="@color/orange" />

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingStart="20dp">

            <!-- Item Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageItem"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="16dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.Corner.Medium"
                tools:src="@drawable/ic_placeholder_item"
                tools:visibility="visible" />

            <!-- Content Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Header Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <!-- Selection Checkbox -->
                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkboxSelection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone" />

                    <!-- Item Name -->
                    <TextView
                        android:id="@+id/textItemName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="iPhone 15 Pro Max" />

                    <!-- Urgent Indicator -->
                    <ImageView
                        android:id="@+id/iconUrgent"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_urgent"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <!-- Price Tracking Indicator -->
                    <ImageView
                        android:id="@+id/iconPriceTracking"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_track_price"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </LinearLayout>

                <!-- Category and Quantity Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/textCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="数码产品" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/dot_separator" />

                    <TextView
                        android:id="@+id/textQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:visibility="gone"
                        tools:text="1台"
                        tools:visibility="visible" />

                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:id="@+id/textDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:visibility="gone"
                    tools:text="256GB 深空黑色，性能强劲的旗舰手机"
                    tools:visibility="visible" />

                <!-- Price Section -->
                <LinearLayout
                    android:id="@+id/layoutPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:layout_marginHorizontal="-8dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Current Price -->
                        <TextView
                            android:id="@+id/textCurrentPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            tools:text="¥9,999.00" />

                        <!-- Target Price -->
                        <TextView
                            android:id="@+id/textTargetPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:visibility="gone"
                            tools:text="目标 ¥8,999.00"
                            tools:visibility="visible" />

                    </LinearLayout>

                    <!-- Price Change Indicator -->
                    <TextView
                        android:id="@+id/textPriceChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:text="-5.2%"
                        tools:textColor="@color/success"
                        tools:visibility="visible" />

                </LinearLayout>

                <!-- Bottom Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Priority Chip -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPriority"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:textSize="12sp"
                        tools:text="高优先级" />

                    <!-- Status Chip -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipStatus"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:text="降价了"
                        tools:visibility="visible" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <!-- Date Info -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/textCreatedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceCaption"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            tools:text="添加于 03/15" />

                        <TextView
                            android:id="@+id/textLastView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceCaption"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:visibility="gone"
                            tools:text="查看 5 次"
                            tools:visibility="visible" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Quick Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonQuickAction"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                app:icon="@drawable/ic_more_vert"
                app:iconGravity="textStart"
                app:iconPadding="0dp" />

        </LinearLayout>

        <!-- Paused Overlay -->
        <FrameLayout
            android:id="@+id/overlayPaused"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/surface_variant_overlay"
            android:visibility="gone">

            <TextView
                android:id="@+id/textPausedStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_paused_label"
                android:padding="8dp"
                android:text="已暂停跟踪"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textStyle="bold" />

        </FrameLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>
