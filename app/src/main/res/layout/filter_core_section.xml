<?xml version="1.0" encoding="utf-8"?>
<!-- 核心分类字段区域 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="核心分类"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <!-- 分类 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:text="分类"
        android:textColor="?attr/colorOnSurface"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/categoryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/categoryChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="4dp"
            app:selectionRequired="false"
            app:singleSelection="false"
            app:checkedChip="@null">
            
            <!-- 动态添加分类chips -->
        </com.google.android.material.chip.ChipGroup>

        <com.google.android.material.chip.Chip
            android:id="@+id/categoryExpandButton"
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="展示全部"
            android:visibility="gone"
            app:chipIcon="@drawable/ic_expand_more"
            app:iconStartPadding="4dp" />
    </LinearLayout>

    <!-- 品牌 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:text="品牌"
        android:textColor="?attr/colorOnSurface"
        android:textSize="14sp" />
    
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.App.TextInputLayout.FlatRounded.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_search"
        app:startIconTint="?attr/colorOnSurface"
        app:endIconMode="clear_text"
        app:endIconTint="?attr/colorOnSurface">

        <AutoCompleteTextView
            android:id="@+id/brandDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="点击查看品牌或直接输入"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="13sp"
            android:maxLines="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:completionThreshold="0" />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>
