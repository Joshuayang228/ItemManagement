<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.settings.AppSettingsFragment">

    <!-- Toolbar移除，使用MainActivity统一管理导航 -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 外观设置 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.App.Card.Settings">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="外观设置"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_palette_24dp"
                        android:drawablePadding="8dp"
                        android:gravity="start|center_vertical"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="主题模式"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:layout_marginBottom="8dp" />

                    <RadioGroup
                        android:id="@+id/rgTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <RadioButton
                            android:id="@+id/rbThemeAuto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="跟随系统"
                            android:checked="true" />

                        <RadioButton
                            android:id="@+id/rbThemeLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="浅色模式" />

                        <RadioButton
                            android:id="@+id/rbThemeDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="深色模式" />

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="紧凑模式"
                            android:textAppearance="?attr/textAppearanceBody1" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchCompactMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="使用更紧凑的界面布局，显示更多内容"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="显示统计数据"
                            android:textAppearance="?attr/textAppearanceBody1" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchShowStats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 通知设置 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.App.Card.Settings">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="通知设置"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_notifications_24dp"
                        android:drawablePadding="8dp"
                        android:gravity="start|center_vertical"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="推送通知"
                            android:textAppearance="?attr/textAppearanceBody1" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="接收过期提醒、库存不足等重要通知"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="提示音效"
                            android:textAppearance="?attr/textAppearanceBody1" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchSoundEffects"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 默认设置 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.App.Card.Settings">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="默认设置"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_tune_24dp"
                        android:drawablePadding="8dp"
                        android:gravity="start|center_vertical"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="默认单位"
                        style="@style/Widget.App.TextInputLayout"
                        app:helperText="添加物品时的默认计量单位">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDefaultUnit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="个"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="默认分类"
                        style="@style/Widget.App.TextInputLayout"
                        app:helperText="添加物品时的默认分类（可为空）">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDefaultCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnSaveDefaults"
                        style="@style/Widget.App.Button.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保存默认值"
                        android:layout_gravity="end" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 其他设置 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.App.Card.Settings">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="其他设置"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_more_horiz_24dp"
                        android:drawablePadding="8dp"
                        android:gravity="start|center_vertical"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="显示教程提示"
                            android:textAppearance="?attr/textAppearanceBody1" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchTutorialTips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="为新功能显示使用提示和指导"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginBottom="16dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 危险区域 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.App.Card.Settings">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="数据管理"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textStyle="bold"
                        android:textColor="?attr/colorError"
                        android:drawableStart="@drawable/ic_warning_24dp"
                        android:drawablePadding="8dp"
                        android:gravity="start|center_vertical"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCleanupData"
                        style="@style/Widget.App.Button.Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="清理过期数据"
                        android:textColor="?attr/colorError"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnResetSettings"
                        style="@style/Widget.App.Button.Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="重置所有设置"
                        android:textColor="?attr/colorError" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 底部间距 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
