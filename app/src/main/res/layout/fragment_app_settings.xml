<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.settings.AppSettingsFragment">

    <!-- Toolbar移除，使用MainActivity统一管理导航 -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 外观设置 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.App.Card.Settings">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="外观设置"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_palette_24dp"
                        android:drawablePadding="8dp"
                        android:gravity="start|center_vertical"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="主题模式"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:layout_marginBottom="8dp" />

                    <RadioGroup
                        android:id="@+id/rgTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rbThemeAuto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="跟随系统" />

                        <RadioButton
                            android:id="@+id/rbThemeLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="浅色模式" />

                        <RadioButton
                            android:id="@+id/rbThemeDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="深色模式" />

                    </RadioGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 首页功能入口显示 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.App.Card.Settings">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="首页功能入口"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_view_grid"
                        android:drawablePadding="8dp"
                        android:gravity="start|center_vertical"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="选择哪些快捷入口显示在首页顶部"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchHomeExpiring"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="显示「即将过期」入口"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchHomeExpired"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="显示「过期物品」入口"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchHomeLowStock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="显示「库存不足」入口"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchHomeShopping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="显示「购物清单」入口"
                        android:textAppearance="?attr/textAppearanceBody1" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 通知方式 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.App.Card.Settings">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="通知方式"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_notifications_24dp"
                        android:drawablePadding="8dp"
                        android:gravity="start|center_vertical"
                        android:layout_marginBottom="16dp" />

                    <!-- 推送通知 -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchPushNotification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="推送通知"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:layout_marginBottom="8dp" />

                    <!-- 应用内提醒 -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchInAppReminder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="应用内提醒"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:layout_marginBottom="8dp" />

                    <!-- 通知时间 -->
                    <LinearLayout
                        android:id="@+id/layoutNotificationTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="48dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="通知时间"
                            android:textAppearance="?attr/textAppearanceBody1" />

                        <TextView
                            android:id="@+id/textNotificationTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09:00"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:textColor="?attr/colorPrimary" />

                    </LinearLayout>

                    <!-- 免打扰时段 -->
                    <LinearLayout
                        android:id="@+id/layoutQuietHours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:minHeight="48dp"
                        android:layout_marginBottom="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="免打扰时段"
                            android:textAppearance="?attr/textAppearanceBody1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical|end">

                            <TextView
                                android:id="@+id/textQuietStart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="22:00"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="?attr/colorPrimary"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" - "
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/textQuietEnd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="08:00"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="?attr/colorPrimary"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 周末暂停提醒 -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchWeekendPause"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="周末暂停提醒"
                        android:textAppearance="?attr/textAppearanceBody1" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 提醒规则 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.App.Card.Settings">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="提醒规则"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_calendar"
                        android:drawablePadding="8dp"
                        android:gravity="start|center_vertical"
                        android:layout_marginBottom="16dp" />

                    <!-- 到期提前天数提醒 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="到期提前天数提醒"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <SeekBar
                            android:id="@+id/seekBarExpirationDays"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="30"
                            android:progress="7" />

                        <TextView
                            android:id="@+id/textExpirationDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7天"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:textColor="?attr/colorPrimary" />

                    </LinearLayout>

                    <!-- 包含保修期 -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchIncludeWarranty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="包含保修期到期提醒"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:layout_marginBottom="8dp" />

                    <!-- 库存提醒 -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchStockReminder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="启用库存不足提醒"
                        android:textAppearance="?attr/textAppearanceBody1" />

                    <!-- 库存阈值容器（根据库存提醒开关动态显示/隐藏） -->
                    <LinearLayout
                        android:id="@+id/layoutCategoryThresholds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="16dp">

                        <!-- 分割线（带点样式） -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1"
                                android:background="?attr/colorOutlineVariant" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" ● "
                                android:textColor="?attr/colorOutlineVariant"
                                android:textSize="16sp"
                                android:paddingHorizontal="8dp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1"
                                android:background="?attr/colorOutlineVariant" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="分类物品少于多少会通知提醒"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:textColor="?attr/colorPrimary"
                            android:layout_marginBottom="12dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewCategoryThresholds"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:nestedScrollingEnabled="false" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 重置所有设置（底部居中） -->
            <TextView
                android:id="@+id/btnResetSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="重置所有设置"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?attr/colorError"
                android:gravity="center"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp" />

            <!-- 底部间距 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
