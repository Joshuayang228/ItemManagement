<?xml version="1.0" encoding="utf-8"?>
<!-- 购物概览仪表板 - Material 3 设计 -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/shopping_surface"
    app:strokeWidth="1dp"
    app:strokeColor="@color/shopping_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 标题区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 购物车图标 -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_shopping_cart"
                android:contentDescription="购物概览"
                app:tint="@color/shopping_primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="购物概览"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <!-- 刷新按钮 - 简洁样式 -->
            <ImageButton
                android:id="@+id/btnRefresh"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_popup_sync"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="刷新"
                app:tint="@color/shopping_primary"
                android:scaleType="center" />

        </LinearLayout>

        <!-- 统计数据区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- 活跃清单数 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvActiveListsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/shopping_primary"
                    tools:text="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="活跃清单"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <!-- 分隔线 -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#E0E0E0"
                android:layout_gravity="center_vertical" />

            <!-- 待购物品数 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvPendingItemsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/expiring_primary"
                    tools:text="12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="待购物品"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <!-- 分隔线 -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#E0E0E0"
                android:layout_gravity="center_vertical" />

            <!-- 本周预算 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvWeeklyBudget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥200"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/normal_primary"
                    tools:text="¥200" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="本周预算"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
