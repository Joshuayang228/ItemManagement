<?xml version="1.0" encoding="utf-8"?>
<!--
Material 3 Navigation Drawer Header
符合Material You设计规范的导航抽屉头部
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="?attr/colorSurfaceContainer"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="bottom">

    <!-- 应用图标 -->
    <ImageView
        android:id="@+id/nav_header_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="应用图标" />

    <!-- 应用标题 -->
    <TextView
        android:id="@+id/nav_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="物品管理"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold" />

    <!-- 应用副标题 -->
    <TextView
        android:id="@+id/nav_header_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="高效管理您的生活物品"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant" />

</LinearLayout>

