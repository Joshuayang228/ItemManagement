<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- 复选框 -->
        <CheckBox
            android:id="@+id/checkboxPurchased"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/success"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 物品名称 -->
        <TextView
            android:id="@+id/itemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="苹果"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/checkboxPurchased"
            app:layout_constraintStart_toEndOf="@id/checkboxPurchased"
            app:layout_constraintEnd_toStartOf="@id/buttonDelete"
            tools:text="有机苹果" />

        <!-- 数量和单位 -->
        <TextView
            android:id="@+id/itemQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="2.5 kg"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/itemName"
            app:layout_constraintStart_toStartOf="@id/itemName"
            app:layout_constraintEnd_toStartOf="@id/buttonDelete"
            tools:text="2.5 kg" />

        <!-- 分类和品牌信息 -->
        <TextView
            android:id="@+id/itemCategoryBrand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="生鲜 • 某某品牌"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/itemQuantity"
            app:layout_constraintStart_toStartOf="@id/itemName"
            app:layout_constraintEnd_toStartOf="@id/buttonDelete"
            tools:text="生鲜 • 某某品牌"
            tools:visibility="visible" />

        <!-- 备注信息 -->
        <TextView
            android:id="@+id/itemNotes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="备注：要买甜一点的"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:background="@drawable/bg_detail_tag"
            android:padding="6dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/itemCategoryBrand"
            app:layout_constraintStart_toStartOf="@id/itemName"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="备注：要买甜一点的"
            tools:visibility="visible" />

        <!-- 删除按钮 -->
        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:contentDescription="删除"
            app:tint="@color/text_secondary"
            app:layout_constraintTop_toTopOf="@id/checkboxPurchased"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 添加入库按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAddToInventory"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:text="添加入库"
            android:textSize="12sp"
            android:visibility="gone"
            app:icon="@drawable/ic_add"
            app:iconSize="16dp"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/itemNotes"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView> 