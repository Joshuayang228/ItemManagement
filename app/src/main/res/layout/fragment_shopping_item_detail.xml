<?xml version="1.0" encoding="utf-8"?>
<!-- Material Design 3 购物物品详情布局 -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceContainer">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 照片轮播区域 -->
            <FrameLayout
                android:id="@+id/photoContainer"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="?attr/colorSurfaceVariant"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/photoViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- 照片指示器 -->
                <LinearLayout
                    android:id="@+id/photoIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_background_semi_transparent"
                    android:padding="8dp" />

                <!-- 无图片占位 -->
                <ImageView
                    android:id="@+id/noPhotoPlaceholder"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_image_placeholder"
                    android:tint="?attr/colorOnSurfaceVariant"
                    android:alpha="0.5"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- 物品名称 -->
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/photoContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="有机红富士苹果" />

            <!-- 基本信息卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/basicInfoCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:layout_constraintTop_toBottomOf="@id/nameTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="基本信息"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="24dp" />

                    <!-- 数量 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="数量"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/quantityTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="2.5 kg" />
                    </LinearLayout>

                    <!-- 容量 -->
                    <LinearLayout
                        android:id="@+id/capacityLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="容量"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/capacityTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="500 ml" />
                    </LinearLayout>

                    <!-- 规格 -->
                    <LinearLayout
                        android:id="@+id/specificationLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="规格"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/specificationTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="有机认证" />
                    </LinearLayout>

                    <!-- 品牌 -->
                    <LinearLayout
                        android:id="@+id/brandLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="品牌"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/brandTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="农夫山泉" />
                    </LinearLayout>

                    <!-- 序列号 -->
                    <LinearLayout
                        android:id="@+id/serialNumberLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="序列号"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/serialNumberTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            android:fontFamily="monospace"
                            tools:text="SKU12345" />
                    </LinearLayout>

                    <!-- 分类 - 使用 Chips -->
                    <LinearLayout
                        android:id="@+id/categoryContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="分类"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end">
                            <com.google.android.material.chip.Chip
                                android:id="@+id/categoryChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginTop="-4dp"
                                android:layout_marginBottom="-4dp"
                                style="@style/Widget.Material3.Chip.Suggestion"
                                app:chipBackgroundColor="?attr/colorSecondaryContainer"
                                app:chipStrokeWidth="0dp"
                                android:textColor="?attr/colorOnSecondaryContainer"
                                android:textSize="12sp"
                                app:closeIconVisible="false"
                                tools:text="食品" />
                            <com.google.android.material.chip.Chip
                                android:id="@+id/subCategoryChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-4dp"
                                android:layout_marginBottom="-4dp"
                                style="@style/Widget.Material3.Chip.Suggestion"
                                app:chipBackgroundColor="?attr/colorTertiaryContainer"
                                app:chipStrokeWidth="0dp"
                                android:textColor="?attr/colorOnTertiaryContainer"
                                android:textSize="12sp"
                                app:closeIconVisible="false"
                                android:visibility="gone"
                                tools:text="饮料" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 季节 -->
                    <LinearLayout
                        android:id="@+id/seasonLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="季节"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/seasonTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="春夏秋冬" />
                    </LinearLayout>

                    <!-- 评分 -->
                    <LinearLayout
                        android:id="@+id/ratingLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="评分"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end">
                            <RatingBar
                                android:id="@+id/ratingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-2dp"
                                android:layout_marginBottom="-2dp"
                                style="?android:attr/ratingBarStyleIndicator"
                                android:numStars="5"
                                android:stepSize="0.5"
                                android:isIndicator="true"
                                android:progressTint="?attr/colorPrimary"
                                android:secondaryProgressTint="?attr/colorOutlineVariant"
                                tools:rating="4.5" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 标签 -->
                    <LinearLayout
                        android:id="@+id/tagsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="标签"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end">
                            <HorizontalScrollView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-4dp"
                                android:layout_marginBottom="-4dp"
                                android:scrollbars="none">
                                <com.google.android.material.chip.ChipGroup
                                    android:id="@+id/tagsChipGroup"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:chipSpacingHorizontal="4dp"
                                    app:singleLine="true" />
                            </HorizontalScrollView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 价格信息卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/priceInfoCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:layout_constraintTop_toBottomOf="@id/basicInfoCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="价格信息"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="24dp" />

                    <!-- 预估价格 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="预估价格"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/estimatedPriceTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:gravity="end"
                            tools:text="¥25.80" />
                    </LinearLayout>

                    <!-- 预算上限 -->
                    <LinearLayout
                        android:id="@+id/budgetLimitLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="预算上限"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/budgetLimitTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="¥30.00" />
                    </LinearLayout>

                    <!-- 实际价格 -->
                    <LinearLayout
                        android:id="@+id/actualPriceLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="实际价格"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/actualPriceTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="未购买" />
                    </LinearLayout>

                    <!-- 总价 -->
                    <LinearLayout
                        android:id="@+id/totalPriceLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="总价"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/totalPriceTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:gravity="end"
                            tools:text="¥51.60" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 购物计划卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/shoppingPlanCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:layout_constraintTop_toBottomOf="@id/priceInfoCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="购物计划"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="24dp" />

                    <!-- 重要程度 -->
                    <LinearLayout
                        android:id="@+id/priorityLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="重要程度"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end">
                            <com.google.android.material.chip.Chip
                                android:id="@+id/priorityChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-4dp"
                                android:layout_marginBottom="-4dp"
                                style="@style/Widget.Material3.Chip.Assist"
                                android:textSize="12sp"
                                app:chipMinHeight="32dp"
                                tools:text="重要物品" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 紧急程度 -->
                    <LinearLayout
                        android:id="@+id/urgencyLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="紧急程度"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end">
                            <com.google.android.material.chip.Chip
                                android:id="@+id/urgencyChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-4dp"
                                android:layout_marginBottom="-4dp"
                                style="@style/Widget.Material3.Chip.Assist"
                                android:textSize="12sp"
                                app:chipMinHeight="32dp"
                                tools:text="紧急" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 截止日期 -->
                    <LinearLayout
                        android:id="@+id/deadlineLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="截止日期"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/deadlineTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="2025-10-05" />
                    </LinearLayout>

                    <!-- 提醒日期 -->
                    <LinearLayout
                        android:id="@+id/reminderLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="提醒日期"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/reminderTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="2025-10-04" />
                    </LinearLayout>

                    <!-- 周期性购买 -->
                    <LinearLayout
                        android:id="@+id/recurringLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="周期性购买"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end">
                            <com.google.android.material.chip.Chip
                                android:id="@+id/recurringChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-4dp"
                                android:layout_marginBottom="-4dp"
                                style="@style/Widget.Material3.Chip.Assist"
                                app:chipBackgroundColor="?attr/colorTertiaryContainer"
                                app:chipStrokeWidth="0dp"
                                android:textColor="?attr/colorOnTertiaryContainer"
                                android:textSize="12sp"
                                app:chipMinHeight="32dp"
                                tools:text="每7天" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 购买信息卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/purchaseInfoCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:layout_constraintTop_toBottomOf="@id/shoppingPlanCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="购买信息"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="24dp" />

                    <!-- 购买商店 -->
                    <LinearLayout
                        android:id="@+id/storeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="购买商店"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/storeTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="盒马鲜生" />
                    </LinearLayout>

                    <!-- 购买渠道 -->
                    <LinearLayout
                        android:id="@+id/purchaseChannelLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="购买渠道"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/purchaseChannelTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="线上商城" />
                    </LinearLayout>

                    <!-- 购买原因 -->
                    <LinearLayout
                        android:id="@+id/purchaseReasonLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="购买原因"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/purchaseReasonTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="快用完了" />
                    </LinearLayout>

                    <!-- 添加日期 -->
                    <LinearLayout
                        android:id="@+id/addDateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="添加日期"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/addDateTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="2025-10-05" />
                    </LinearLayout>

                    <!-- 购买日期 -->
                    <LinearLayout
                        android:id="@+id/purchaseDateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="购买日期"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/purchaseDateTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            tools:text="2025-10-06" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 备注卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/noteCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:layout_constraintTop_toBottomOf="@id/purchaseInfoCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="备注"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="24dp" />

                    <TextView
                        android:id="@+id/noteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:lineSpacingMultiplier="1.4"
                        android:maxLines="5"
                        android:layout_marginBottom="24dp"
                        tools:text="要买甜一点的，最好是山东产的" />

                    <!-- 展开/收起按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/expandNoteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="展开"
                        android:textColor="?attr/colorPrimary"
                        android:visibility="gone"
                        style="@style/Widget.Material3.Button.TextButton"
                        tools:visibility="visible" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 价格跟踪卡片 -->
            <include
                android:id="@+id/priceTrackingCardInclude"
                layout="@layout/card_price_tracking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@id/noteCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 底部操作栏 -->
    <LinearLayout
        android:id="@+id/bottomActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?attr/colorSurfaceContainer"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <!-- 标记已购买 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonTogglePurchased"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:text="标记已购买"
            style="@style/Widget.Material3.Button.TonalButton" />

        <!-- 转入库存 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonTransferToInventory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="转入库存"
            android:textColor="?attr/colorOnPrimary"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

