<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 标题栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="筛选"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#E0E0E0" />
    </RelativeLayout>

    <!-- 主要内容区域 - 左右双栏布局 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="horizontal">

        <!-- 左侧导航栏 -->
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="#F5F5F5"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/navigationRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!-- 分隔线 -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E0E0E0" />

        <!-- 右侧内容区域 - 统一显示所有字段 -->
        <ScrollView
            android:id="@+id/contentScrollView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:overScrollMode="always"
            android:scrollbarStyle="insideOverlay"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:clipToPadding="false"
                android:minHeight="500dp">

                <!-- 核心分类字段区域 -->
                <LinearLayout
                    android:id="@+id/coreSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="核心分类"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp" />

                    <!-- 分类 -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.App.TextInputLayout.FlatRounded.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <AutoCompleteTextView
                            android:id="@+id/categoryDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:hint="选择分类"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 子分类 -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.App.TextInputLayout.FlatRounded.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <AutoCompleteTextView
                            android:id="@+id/subCategoryDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:hint="选择子分类"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 品牌 -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.App.TextInputLayout.FlatRounded.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/brandDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:hint="选择品牌"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- 分隔线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#E0E0E0" />

                <!-- 位置筛选字段区域 -->
                <LinearLayout
                    android:id="@+id/locationSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="位置筛选"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp" />

                    <!-- 位置区域 -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.App.TextInputLayout.FlatRounded.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <AutoCompleteTextView
                            android:id="@+id/locationAreaDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:hint="选择区域"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 容器 -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.App.TextInputLayout.FlatRounded.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <AutoCompleteTextView
                            android:id="@+id/containerDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:hint="选择容器"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 子位置 -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.App.TextInputLayout.FlatRounded.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/sublocationDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:hint="选择子位置"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- 分隔线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#E0E0E0" />

                <!-- 状态与评级字段区域 -->
                <LinearLayout
                    android:id="@+id/statusRatingSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="状态与评级"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp" />

                    <!-- 开封状态 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:text="开封状态"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/openStatusChipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:chipSpacingHorizontal="8dp"
                        app:selectionRequired="false"
                        app:singleSelection="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipUnopened"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未开封" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipOpened"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已开封" />
                    </com.google.android.material.chip.ChipGroup>

                    <!-- 评分 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="评分"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/ratingChipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:chipSpacingHorizontal="8dp"
                        app:selectionRequired="false"
                        app:singleSelection="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipRating1"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1颗星" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipRating2"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2颗星" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipRating3"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3颗星" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipRating4"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4颗星" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipRating5"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5颗星" />
                    </com.google.android.material.chip.ChipGroup>

                    <!-- 季节 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="季节"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/seasonChipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="4dp"
                        app:selectionRequired="false"
                        app:singleSelection="false"
                        app:checkedChip="@null">
                        
                        <!-- 动态添加季节chips -->
                    </com.google.android.material.chip.ChipGroup>

                    <!-- 标签 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="标签"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/tagsChipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="4dp"
                        app:selectionRequired="false"
                        app:singleSelection="false"
                        app:checkedChip="@null">
                        
                        <!-- 动态添加标签chips -->
                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

                <!-- 分隔线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#E0E0E0" />

                <!-- 数值范围字段区域 -->
                <LinearLayout
                    android:id="@+id/valueRangeSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="数值范围"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp" />

                    <!-- 数量范围 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:text="数量范围"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.App.TextInputLayout.FlatRounded"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/minQuantityInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:hint="最小数量"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="12dp"
                            android:text="-"
                            android:textSize="16sp"
                            android:textColor="#757575" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.App.TextInputLayout.FlatRounded"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/maxQuantityInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:hint="最大数量"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- 价格范围 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="价格范围"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.App.TextInputLayout.FlatRounded"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/minPriceInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:hint="最低价格"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="12dp"
                            android:text="-"
                            android:textSize="16sp"
                            android:textColor="#757575" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.App.TextInputLayout.FlatRounded"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/maxPriceInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:hint="最高价格"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- 分隔线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#E0E0E0" />

                <!-- 日期筛选字段区域 - 拆分为独立的日期范围 -->
                <LinearLayout
                    android:id="@+id/dateSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="日期筛选"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp" />

                    <!-- 过期日期范围 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:text="过期日期范围"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.App.TextInputLayout.FlatRounded"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/expirationStartDateInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:clickable="true"
                                android:hint="起始日期"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="12dp"
                            android:text="-"
                            android:textSize="16sp"
                            android:textColor="#757575" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.App.TextInputLayout.FlatRounded"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/expirationEndDateInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:clickable="true"
                                android:hint="结束日期"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- 添加日期范围 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="添加日期范围"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.App.TextInputLayout.FlatRounded"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/creationStartDateInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:clickable="true"
                                android:hint="起始日期"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="12dp"
                            android:text="-"
                            android:textSize="16sp"
                            android:textColor="#757575" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.App.TextInputLayout.FlatRounded"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/creationEndDateInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:clickable="true"
                                android:hint="结束日期"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- 购买日期范围 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="购买日期范围"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.App.TextInputLayout.FlatRounded"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/purchaseStartDateInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:clickable="true"
                                android:hint="起始日期"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="12dp"
                            android:text="-"
                            android:textSize="16sp"
                            android:textColor="#757575" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.App.TextInputLayout.FlatRounded"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/purchaseEndDateInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:clickable="true"
                                android:hint="结束日期"
