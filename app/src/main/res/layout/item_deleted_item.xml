<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Widget.App.Card.ListItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- 选择框 -->
        <CheckBox
            android:id="@+id/cbSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- 物品照片 -->
        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rounded_corner_background"
            android:scaleType="centerCrop"
            android:contentDescription="物品照片"
            tools:src="@drawable/ic_inventory_24dp" />

        <!-- 物品信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 物品名称 -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="苹果 iPhone 14" />

            <!-- 分类和品牌 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_category_tag"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="12sp"
                    tools:text="电子产品" />

                <TextView
                    android:id="@+id/tvBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="12sp"
                    tools:text="Apple" />

            </LinearLayout>

            <!-- 数量和位置 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_inventory_24dp"
                    android:drawablePadding="4dp"
                    android:drawableTint="?attr/colorOnSurface"
                    android:gravity="center_vertical"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="12sp"
                    tools:text="1台" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="4dp"
                    android:drawableTint="?attr/colorOnSurface"
                    android:gravity="center_vertical"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="客厅 > 电视柜" />

            </LinearLayout>

            <!-- 删除时间和剩余天数 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDeletedDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="11sp"
                    android:alpha="0.7"
                    tools:text="删除时间：01月15日 14:30" />

                <TextView
                    android:id="@+id/tvDaysRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    tools:text="还有 25 天" />

            </LinearLayout>

        </LinearLayout>

        <!-- 操作按钮 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <!-- 恢复按钮 -->
            <ImageButton
                android:id="@+id/btnRestore"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_check"
                android:contentDescription="恢复物品"
                android:scaleType="center"
                app:tint="@color/color_success" />

            <!-- 彻底删除按钮 -->
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete_modern"
                android:contentDescription="彻底删除"
                android:scaleType="center"
                app:tint="@color/color_error" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
