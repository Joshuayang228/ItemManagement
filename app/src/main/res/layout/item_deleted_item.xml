<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    style="@style/Widget.App.Card.ListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- 选择框（选择模式时显示） -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkboxSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- 左侧：物品图标 -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivItemIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="12dp"
            android:background="?attr/colorSecondaryContainer"
            android:contentDescription="物品图标"
            android:padding="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_inventory_24dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            app:tint="?attr/colorOnSecondaryContainer" />

        <!-- 右侧：物品信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 第一行：物品名称 + 来源标签 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="iPhone 15 Pro Max" />

                <!-- 来源标签 -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/tvSourceTag"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:text="库存"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="11sp"
                    app:chipBackgroundColor="?attr/colorSecondaryContainer"
                    app:chipCornerRadius="6dp"
                    app:chipMinHeight="24dp"
                    app:chipMinTouchTargetSize="0dp"
                    tools:text="库存" />

            </LinearLayout>

            <!-- 第二行：分类 + 品牌 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="13sp"
                    tools:text="电子产品" />

                <TextView
                    android:id="@+id/tvBrandDivider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:text="•"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="13sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvBrand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="13sp"
                    android:visibility="gone"
                    tools:text="Apple"
                    tools:visibility="visible" />

            </LinearLayout>

            <!-- 第三行：额外信息（容量、评分等） -->
            <LinearLayout
                android:id="@+id/layoutExtraInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tvExtraInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp"
                    tools:text="256GB • ★4.5" />

            </LinearLayout>

            <!-- 第四行：删除时间 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="删除时间"
                    android:src="@drawable/ic_schedule_24dp"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:id="@+id/tvDeletedDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp"
                    tools:text="删除于 2天前" />

            </LinearLayout>

            <!-- 第五行：操作按钮（非选择模式时显示） -->
            <LinearLayout
                android:id="@+id/layoutActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:orientation="horizontal"
                tools:visibility="visible">

                <!-- 恢复按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRestore"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:minWidth="72dp"
                    android:paddingHorizontal="12dp"
                    android:text="恢复"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="13sp"
                    app:icon="@drawable/ic_restore_24dp"
                    app:iconGravity="textStart"
                    app:iconPadding="4dp"
                    app:iconSize="16dp"
                    app:iconTint="?attr/colorPrimary" />

                <!-- 永久删除按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDelete"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:minWidth="72dp"
                    android:paddingHorizontal="12dp"
                    android:text="删除"
                    android:textColor="?attr/colorError"
                    android:textSize="13sp"
                    app:icon="@drawable/ic_delete_24dp"
                    app:iconGravity="textStart"
                    app:iconPadding="4dp"
                    app:iconSize="16dp"
                    app:iconTint="?attr/colorError" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>