<?xml version="1.0" encoding="utf-8"?>
<!--
暗色主题语义化颜色映射文件
将现有应用中使用的颜色名称映射到Material 3暗色Token
确保暗色模式下的一致性体验
-->
<resources>
    <!-- 基础颜色映射到Material 3 Dark -->
    <color name="primary">@color/md_theme_dark_primary</color>
    <color name="accent">@color/md_theme_dark_secondary</color>
    <color name="background">@color/md_theme_dark_background</color>
    <color name="card_background">@color/md_theme_dark_surface_container_low</color>
    <color name="text_primary">@color/md_theme_dark_on_surface</color>
    <color name="text_secondary">@color/md_theme_dark_on_surface_variant</color>
    <color name="divider">@color/md_theme_dark_outline_variant</color>
    <color name="hint_text_color">@color/md_theme_dark_outline_variant</color>
    
    <!-- 通用文本颜色语义映射 -->
    <color name="text_color_primary">@color/md_theme_dark_on_surface</color>
    <color name="text_color_secondary">@color/md_theme_dark_on_surface_variant</color>
    <color name="text_color_hint">@color/md_theme_dark_outline_variant</color>
    
    <!-- 字段状态颜色语义映射 -->
    <color name="field_hint_color">@color/md_theme_dark_outline_variant</color>
